                    </p>
                    <div class="home_price">
                        <span><?php echo Mage::app()->getStore()->getCurrentCurrency()->getCode();?></span>
                        <?php echo $this->getPriceHtml($_product, true) ?>
                    </div>
                </dd>
            </dl>

        <?php endforeach; ?>
    </div>

<?php endif;?>




