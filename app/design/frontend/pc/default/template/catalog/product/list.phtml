<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>





<div class="product_sort">
    <?php
        $sortType = $this->getRequest()->getParam('order');
        $dir = $this->getRequest()->getParam('dir');
    ?>
    <script>
        jQuery(document).ready(function(){
            function updateQueryStringParameter(uri, key, value) {
                var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
                var separator = uri.indexOf('?') !== -1 ? "&" : "?";
                if (uri.match(re)) {
                    return uri.replace(re, '$1' + key + "=" + value + '$2');
                }
                else {
                    return uri + separator + key + "=" + value;
                }
            }

            jQuery('#HOTSALE').on('click',function(){
                var url = updateQueryStringParameter(window.location.toString(), 'order', 'hot_sale');
                url = updateQueryStringParameter(url, 'dir', 'desc');
                window.location.href = url;
                return false;
            });

            jQuery('#NEW').on('click',function(){
                var url = updateQueryStringParameter(window.location.toString(), 'order', 'news_from_date');
                url = updateQueryStringParameter(url, 'dir', 'desc');
                window.location.href = url;
            });

            jQuery('#LOW_PRICE').on('click',function(){
                var url = updateQueryStringParameter(window.location.toString(), 'order', 'price');
                url = updateQueryStringParameter(url, 'dir', 'asc');
                window.location.href = url;
            });

            jQuery('#HIGH_PRICE').on('click',function(){
                var url = updateQueryStringParameter(window.location.toString(), 'order', 'price');
                url = updateQueryStringParameter(url, 'dir', 'desc');
                window.location.href = url;
            });

        });
    </script>


    <span id="HOTSALE" class="<?php if(empty($sortType) || $sortType == 'hot_sale') {echo 'on';}?>">
        <em></em>
        <span>Hot Sale</span>
    </span>



    <span id="NEW" class="<?php if($sortType == 'news_from_date') {echo 'on';}?>">
        <em></em>
        <span>New Arrival</span>
    </span>

    <span id="LOW_PRICE" class="<?php if($sortType == 'price' && $dir == 'asc') {echo 'on';}?>">
        <em></em>
        <span>Low Price</span>
    </span>

    <span id="HIGH_PRICE" class="<?php if($sortType == 'price' && $dir == 'desc') {echo 'on';}?>">
        <em></em>
        <span>High Price</span>
    </span>


</div>






<?php if(!$_productCollection->count()): ?>

    <p class="note-msg M5"><?php echo $this->__('There are no products matching the selection.') ?></p>

<?php else: ?>


    <div class="category-products dress_list">
        <?php $_collectionSize = $_productCollection->count() ?>
        <?php $_columnCount = 4; ?>




        <?php $i=0; foreach ($_productCollection as $_product):?>
            <?php if ($i++%$_columnCount==0): ?>
            <ul class="products-grid">
            <?php endif ?>
                <li style="width:<?php echo 100/$_columnCount?>%" class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">


                    <div class="item_deatil">

                        <a href="<?php echo $_product->getProductUrl() ?>"
                           title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>"
                           class="product-image"
                           style="background-image:url(<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(333,444); ?>);"
                           data-small_image="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(333,444); ?>"
                            >
                            <?php
                            foreach($_product->getMediaGalleryImages() as $GMI){
                                if( $_product->getSmallImage() != $GMI->getFile() ){?>
                            <img src="<?php echo $this->helper('catalog/image')->init($_product, 'image',$GMI->getFile())->resize(333,444);?>"/>
                            <?php
                                    break;
                                }
                            }
                            ?>

                        </a>


                        <h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></a></h2>


                        <?php if($_product->getRatingSummary()): ?>
                            <?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
                        <?php endif; ?>


                        <?php echo $this->getPriceHtml($_product, true) ?>




                    </div>



                </li>
            <?php if ($i%$_columnCount==0 || $i==$_collectionSize): ?>
            </ul>
            <?php endif ?>
        <?php endforeach ?>

        <script type="text/javascript">decorateGeneric($$('ul.products-grid'), ['odd','even','first','last'])</script>
        

        <div class="toolbar-bottom">
            <?php echo $this->getToolbarHtml() ?>
        </div>
    </div>


<?php endif; ?>

<script>
    jQuery(document).ready(function($){

        $("a[data-small_image]").mouseover(function(){
            if($(this).find("img").length>0){
                $(this).css("background-image","url("+ $(this).find("img").prop("src") +")");
            }
        });

        $("a[data-small_image]").mouseout(function(){
            if($(this).find("img").length>0){
                $(this).css("background-image","url("+ $(this).data('small_image')+")");
            }
        });

    });
</script>